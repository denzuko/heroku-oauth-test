{
  "name": "Oauth proxy test for heroku",
  "description": "Python backend, oauth2 proxy middleware",
  "keywords": [
    "productivity",
    "HTML5",
    "restapi"
  ],
  "website": "https://dapla.net",
  "repository": "https://github.com/denzuko/heroku-oauth-test",
  "logo": "https://small-sharp-tool.com/logo.svg",
  "success_url": "/ping",
  "scripts": {
    "predeploy": "wget -O https://github.com/oauth2-proxy/oauth2-proxy/releases/download/v7.1.3/oauth2-proxy-v7.1.3.linux-amd64.tar.gz | tar zxvf -"
  },
  "env": {
    "OAUTH2_PROXY_COOKIE_SECRET": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "OAUTH2_PROXY_EMAIL_DOMAINS": {
      "description": "allowed email domains '*' for any.",
      "value": "*"
    },
    "OAUTH2_PROXY_CLIENT_ID": {
      "description": "OAuth2 Client ID token",
      "value": ""
    },
    "OAUTH2_PROXY_CLIENT_SECRET": {
      "description": "OAuaht2 Client Secret token",
      "value": ""
    },
    "OAUTH2_PROXY_GITHUB_USER": {
      "description": "CSV of allowed github users",
      "value": "denzuko"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "image": "heroku/heroku:20",
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "13"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-python"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "exit 0"
      }
    }
  }
}
